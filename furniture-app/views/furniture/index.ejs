<%- include('../partials/header') %>

<h1 class="mb-4">All Furniture</h1>

<div class="row">
    <% furnitures.forEach(furniture => { %>
    <div class="col-md-4 mb-4">
        <div class="card">
            <img src="/<%= furniture.image %>" class="card-img-top" alt="<%= furniture.furnitureName %>">
            <div class="card-body">
                <h5 class="card-title"><%= furniture.furnitureName %></h5>
                <p class="card-text">Price: $<%= furniture.price %></p>
                <p class="card-text"><small class="text-muted">Posted by <%= furniture.owner.username %></small></p>
                <a href="/furniture/<%= furniture._id %>" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
    <% }); %>
</div>

<%- include('../partials/footer') %>
