<%- include('../partials/header') %>

<h1 class="mb-4">Edit Furniture</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form action="/furniture/<%= furniture._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="furnitureName">Furniture Name (Cannot be changed)</label>
                <input class="form-control" type="text" id="furnitureName" value="<%= furniture.furnitureName %>" disabled>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <input class="form-control" type="number" id="price" name="price" value="<%= furniture.price %>" required min="0">
                <div class="invalid-feedback">
                    Please provide a valid price.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="file" id="image" name="image" accept="image/*">
                <small class="text-muted">Current image: <%= furniture.image %></small>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update Furniture</button>
            </div>
        </form>
        <a href="/furniture/<%= furniture._id %>">Back to Furniture</a>
    </div>
</div>

<%- include('../partials/footer') %>
